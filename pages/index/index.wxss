/**index.wxss**/
.container {
  background-color: #f2f2f2;
  min-height: 100%;
}

.swiper {
  width: 100%
}

.swiper-item {
  flex: 1
}

.slide-image {
  width: 100%;
  height: 100%;
}

.navs {
  width: 100%;
  display: block;
  padding: 10rpx;
}

.nav-item {
  min-width: 20%;
  min-height: 100rpx;
  font-size: 22rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.nav-img {
 max-width: 100rpx;
 max-height: 100rpx;
 padding-top: 10rpx;
}

.nav-item text {
  text-align: center;
  font-size: 25rpx;
}

.short {
  width: 100%;
  box-sizing: border-box;
  display: block;
  padding: 1%;
}

.short-item {
  width: 47%;
  height: 435rpx;
  margin: 1.5%;
  flex-grow: 0;
  box-sizing: border-box;
  padding: 1%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.short-img {
  width: 100%;
  /* height: 290rpx; */
  flex: 1;
}

.short-box {
  /* flex: 1; */
  width: 100%;
  box-sizing: border-box;
  padding-right: 10rpx;
  padding-left: 10rpx;
  height: 90rpx;
  margin-top: 5rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.short-titles {
  flex: 1;
  flex-direction: column;
  justify-content: flex-start;
  /* flex-wrap: nowrap; */
  display: flex;
  overflow: hidden;
  max-height: 100%;
}

.short-title {
  line-height: 120%;
  flex-wrap: nowrap;
  flex: 1;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  padding-left: 10rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.short-price {
  color: #cf0000;
}

.icon-goods {
  margin-right: 5rpx;
  margin-left: 5rpx;
  width: 50rpx;
  height: 50rpx;
  /* background-image: url(icon_goods.png) */
}
